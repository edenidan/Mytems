<!-- Hotest Products Start -->
<section id="hotProducts" class="latest-product-area padding-bottom">
    <div class="container">
        <div class="row product-btn d-flex">
            <!-- Section Tittle -->
            <div class="col-xl-5 col-lg-5 col-md-5">
                <div class="section-tittle mb-30">
                    <h2>Hot Products</h2>
                </div>
            </div>
        </div>
        <!-- Nav Card -->
        <div class="container">
            <div class="row">
                @foreach (Mytems.Models.Product product in Model)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm" style="height:500px; overflow:hidden;">
                            <img class="card-img-top" src="@product.ImagePath" alt="Card image cap" width="200" height="200">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    Price: <span class="price-display">$@product.Price</span>
                                    <br />

                                    Description:<br />
                                    @product.Description

                                    @if (Session["User"] is Mytems.Models.Customer || Session["User"] is Mytems.Models.Admin)
                                    {
                                        <a href="/Products/Details/@product.ProductID" style="bottom:25px;position:absolute;" class="btn btn-primary">View</a>
                                    }
                                    else
                                    {
                                    <p style="font-weight: bold;">Sign up as customer to view</p>
                                    <a href="/customers/create" style="bottom:15px;position:absolute;" class="btn btn-primary btn-sm">Sign up</a>
                                }
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </div>
</section>
<!-- Latest Products End -->

