@model Mytems.PresentationModels.Products.DetailsProduct

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <img src="@Model.ImagePath" style="height:100px;width:100px;" />
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sold)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sold)
        </dd>

        @if (Model.SoldAt != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SoldAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoldAt)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            <div class="price-display">
                @Html.DisplayFor(model => model.Price)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SellerUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellerUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
