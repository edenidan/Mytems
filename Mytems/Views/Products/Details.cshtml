@model Mytems.ViewModels.Products.DetailsProduct

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <img src="@Model.ImagePath" style="height:100px;width:100px;" />
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sold)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sold)
        </dd>

        @if (Model.SoldAt != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SoldAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoldAt)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            <div class="price-display">
                @Html.DisplayFor(model => model.Price)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SellerUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellerUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
