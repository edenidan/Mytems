@{
    ViewBag.Title = "Dashboard";
}

<h2 style="text-align: center;">Dashboard</h2>

<style>
    .optTabs .nav-pills > li > a {
        border-radius: 4px 4px 0 0;
        padding: 5px 15px;
    }

    .optTabs .active > a {
        color: white;
        background-color: #428bca;
        padding: 5px 15px;
    }
</style>


<!-- Sales per day graph -->
<div>
    <div class="container"><h4>Choose the number of days in the graph</h4></div>
    <div class="container optTabs">
        <ul class="nav nav-pills">
            <li class="active">
                <a class="salesPerDayAdminTab" data-value="7" href="#1b" data-toggle="tab">7 days</a>
            </li>
            <li>
                <a class="salesPerDayAdminTab" data-value="14" href="#2b" data-toggle="tab">14 days</a>
            </li>
            <li>
                <a class="salesPerDayAdminTab" data-value="21" href="#3b" data-toggle="tab">21 days</a>
            </li>
            <li>
                <a class="salesPerDayAdminTab" data-value="28" href="#4b" data-toggle="tab">28 days</a>
            </li>
        </ul>
    </div>
    <div>
        <canvas id="salesPerDayCanvas" style="height: 100%; width: 50%; display: inline-block"></canvas>
    </div>
</div>

<!-- Category by money value pie chart -->
<div>
    <canvas id="categoryMoneyValueCanvas" style="height: 100%; width: 50%; display: inline-block"></canvas>
</div>






@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script id="salesPerDayScript" src="~/Scripts/Charts/Admin/salesPerDay.js" data-graph-data="@ViewBag.salesPerDayData"></script>
    <script id="categoryMoneyValueScript" src="~/Scripts/Charts/Admin/categoryMoneyValue.js" data-chart-data="@ViewBag.columnGraphData"></script>
}