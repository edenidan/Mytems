@model Mytems.Models.Seller
@using Mytems.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location.Address)
        </dt>

        <dd>
            <iframe width="600" height="500"
                    src="https://maps.google.com/maps?q=@Url.Encode(Model.Location.Address)&t=&z=15&ie=UTF8&iwloc=&output=embed"
                    frameborder="0" scrolling="no"
                    marginheight="0" marginwidth="0"></iframe>
        </dd>
    </dl>
</div>

@{
    User user = Session["User"] as User;
    if (user is Admin)
    {
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
    else if (user?.UserID == Model.UserID)
    {
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.UserID })
        </p>
    }
}
